[ui]
name = Ty Alexander
username = talexander
email = ty.alexander@beatport.com
merge = diffmerge

[extensions] 
convert=
color=
pager= 
fetch=
rebase=
kerberos=
graphlog=
hgext.rebase=
extdiff=
reviewboard=~/sandbox/mercurial-reviewboard
#bphg.ext=
mq=

[extdiff]
cmd.diffmerge=/usr/local/bin/diffmerge
cmd.cdiff = colordiff
opts.cdiff = -uprN

[reviewboard]
server=https://reviewboard.beatportcorp.net

[color]
status.modified = yellow bold
status.added = green bold
status.removed = red bold
status.deleted = cyan bold
status.unknown = magenta bold
status.ignored = white bold purple_background
status.clean = white

[alias]
latest = log --limit 10

[pager]
pager = less -R
attend = log,diff,help

[hooks]
#update.test = python:beatport_hg.hooks.test

[merge-tools]
diffmerge.executable = /usr/local/bin/diffmerge
diffmerge.args = --result=$output -t1='Local Version' -t2=$output -t3='Other Version' --caption=$output  $local $base $other
diffmerge.binary = False
diffmerge.symlinks = False
diffmerge.gui = True
diffmerge.premerge = True

[defaults]
# suppress noisy extdiff header message
cdiff = -q

